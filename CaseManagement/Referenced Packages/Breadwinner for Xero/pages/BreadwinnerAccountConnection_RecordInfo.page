<apex:page standardController="Bread_Winner__Breadwinner_Account_Connection__c" >
    <style>
        .content{padding-top:5px; border:1.5px solid #ececec; border-left:0px; vertical-align:center; text-align:left; color:#000; font-size:15px; background-color:#FFFFFF ; }
        .image{padding:15px; padding-right:5px; border:1.5px solid #ececec; border-right:0px;background-color:#FFFFFF ;  }
    </style>
    
    <table width="100%" border="0" cellpadding="0" cellspacing="0">
        <tr  >
            <td class="image">
                <apex:image url="{!URLFOR($Resource.Bread_Winner__BreadwinnerImages,'BW_Logo200x150.png')}" />
            </td>
            <td class="content">
                <apex:outputLabel >
                    This record represents a single Xero Contact.
                    <p/> The fields here are an exact copy of the Contact in Xero. Approximately every hour we will check Xero for any changes and update those changes here.
                    <br/>Please do not edit these fields - changing them will not change anything in Xero.
                </apex:outputLabel>
            </td>
        </tr>
    </table>
</apex:page>